{
  "name": "aloe-frontend",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "blend",
    "earn",
    "prime",
    "shared"
  ],
  "devDependencies": {
    "@babel/core": "7.16.12",
    "@babel/eslint-parser": "^7.17.0",
    "autoprefixer": "^10.4.2",
    "babel-plugin-macros": "^3.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.6",
    "tailwindcss": "^3.0.18",
    "twin.macro": "^2.8.2"
  },
  "scripts": {
    "prettier": "prettier --write */src/**/*.{ts,tsx}",
    "prettier:check": "prettier --check 'src/**/*.{ts,tsx}'",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*/src/**/*.{ts,tsx}": [
      "yarn prettier"
    ]
  }
}
